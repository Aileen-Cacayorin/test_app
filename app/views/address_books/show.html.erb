<h1> <%= @address_book.name  %> Address Book</h1>

<%= link_to "Send message", new_message_path(:address_book_id => @address_book.id) %>

<br>

<%= link_to 'Add Contact', new_address_book_contact_path(@address_book) %>


<% if @contacts.any? %>
  <ul>
    <% @contacts.each do |contact| %>
      <li> <%=contact.fullname %></li>
    <% end %>
  </ul>
<% end  %>
