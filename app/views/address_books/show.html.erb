<h1> <%= @address_book.name  %> Address Book</h1>

<%= link_to "Send message", new_message_path(:address_book_id => @address_book.id) %>

<br>

<%= link_to 'Add Contact', new_address_book_contact_path(@address_book), id: "new_contact_link", remote: true %>


<% if @contacts.any? %>
  <ul id="contacts_list">
    <% @contacts.each do |contact| %>
      <li> <%=link_to contact.fullname, new_message_path(:contact => contact.id, :address_book_id => @address_book.id) %> | <%= link_to "Delete", address_book_contact_path(@address_book, contact), method: :delete %></li>
    <% end %>
  </ul>
<% end  %>
